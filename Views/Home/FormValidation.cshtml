@model TPLOCAL1.Models.Dataform
<html>
<head>
    <title>HN - Validation</title>
    <link rel="stylesheet" href="~/resources/Index.css"/>
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN"/>
        <h1>Page de validation</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/">Accueil</a></li>
            <li><a href="/Home/Index/Form">Remplir le formulaire</a></li>
            <li><a href="/Home/Index/AvisList">Liste Avis</a></li>
        </ul>
    </nav>

    <section>

        <h1>Votre formulaire a bien été pris en compte</h1>

        <div class="validationTable">
            <table id="persoInfo">
                <div class="tableName">Informations personnelles</div>
                <tr>
                    <td>
                        Nom
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Nom)
                    </td>
                </tr>
                <tr>
                    <td>
                        Prenom
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Prenom)
                    </td>
                </tr>
                <tr>
                    <td>
                        Sexe
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Sexe)
                    </td>
                </tr>
                <tr>
                    <td>
                        Addresse
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Addresse)
                    </td>
                </tr>
                <tr>
                    <td>
                        Code Postal
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CodePostal)
                    </td>
                </tr>
                <tr>
                    <td>
                        Ville
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Ville)
                    </td>
                </tr>
                <tr>
                    <td>
                        Addresse mail
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
            </table>
        </div>

        <br />

        <div class="validationTable">
            <table>

                <div class="tableName">Informations formation suivie</div>

                <tr>
                    <td>
                        Date debut formation
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DateDeb)
                    </td>
                </tr>
                <tr>
                    <td>
                        Formation suivie
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Formation)
                    </td>
                </tr>
            </table>
        </div>

        <br />

        <div class="validationTable">
            <table>
                <div class="tableName">Avis sur la formation</div>
                <tr>
                    <td>
                        Cobol formation
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CobolAvis)
                    </td>
                </tr>
                <tr>
                    <td>
                        Objectif formation
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.FormObj)
                    </td>
                </tr>
            </table>
        </div>

    </section>
</body>
</html>
