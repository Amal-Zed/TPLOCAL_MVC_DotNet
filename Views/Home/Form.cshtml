@model TPLOCAL1.Models.Dataform

<! DOCTYPE html>
<html>
    <head>
         <title>HN - TP LOCAL</title>
         <link rel="stylesheet" href="~/resources/Index.css" />
    </head>

    <body>
         <header>
             <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
         </header>
         <nav>
             <ul>
                  <li><a href="/Home/">Accueil</a></li>
                  <li><a href="/Home/Index/AvisList">Liste Avis</a></li>
             </ul>
         </nav>
    <section>
            <form asp-action="FormValidation">
            <div class="formTable">
                <div class="tableName">Informations personnelles</div>
            <table id="persoInfo">
                    
                <tr>
                    <td>
                        Nom
                    </td>
                    <td>
                        <input asp-for="Nom" type="text" placeholder="Ton nom" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Prenom
                    </td>
                    <td>
                            <input asp-for="Prenom" placeholder="Ton prenom" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Sexe
                    </td>
                    <td>
                            <select asp-for="Sexe">
                            <option hidden value="" disabled selected>Selectionner un sexe</option>
                            <option value="Masculin">Masculin</option>
                            <option value="Feminin">Feminin</option>
                            <option value="Autre">Autre</option>
                        </select>
                            <span asp-validation-for="Sexe" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Addresse
                    </td>
                    <td>
                        <input asp-for="Addresse" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Code postal
                    </td>
                    <td>
                            <input asp-for="CodePostal" type="number" placeholder="exemple : 94700" />
                            <span asp-validation-for="CodePostal" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Ville
                    </td>
                    <td>
                         <input asp-for="Ville" />
                    </td>
                </tr>
                <tr>
                    <td>
                         Addresse mail
                    </td>
                    <td>
                            <input asp-for="Email" placeholder="ton-mail@server.domain" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            </div>

            <br />

            <div class="formTable">
                <div class="tableName">Informations formation suivie</div>
                <table id="trainInfo">
                    
                    <tr>
                        <td>
                            Date debut formation
                        </td>
                        <td>
                            <input asp-for="DateDeb" min="2021-01-01"/>
                            <span asp-validation-for="DateDeb" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Formation suivie
                        </td>
                        <td>
                            <input list="formation" asp-for="Formation" placeholder="selectionner une formation">
                            <datalist id="formation">
                                <option value="Cobol formation" />
                                <option value="Entraînement objet" />
                                <option value="Formation Double Compétences" />
                            </datalist>
                            <span asp-validation-for="Formation" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
            </div>

            <br />

            <div class="formTable">
                <div class="tableName">Avis sur la formation</div>
                <table id="trainRev">
                    
                    <tr>
                        <td>
                            Cobol formation
                        </td>
                        <td>
                            <input asp-for="CobolAvis"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Objectif formation
                        </td>
                        <td>
                            <input asp-for="FormObj"/>
                        </td>
                    </tr>
                </table>
            </div>
           
            <input type="submit" value="Validation"/>
        </form>
    </section>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
